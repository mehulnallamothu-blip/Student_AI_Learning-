{
  "name": "learning-app-monorepo",
  "private": true,
  "version": "0.0.1",
  "workspaces": [
    "server",
    "client",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev --workspace server\" \"npm:dev --workspace client\"",
    "build": "npm --workspace client run build && npm --workspace server run build && cp -r client/dist server/dist/client",
    "start": "node server/dist/index.js"
  },
  "devDependencies": {
    "concurrently": "^8.0.0"
  }
}